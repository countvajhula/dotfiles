[user]
	name = Siddhartha
	email = sid@countvajhula.com

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = $HOME/.gitignore_global
	editor = /usr/local/bin/vim

[alias]
	co = checkout
	ci = commit
	d = difftool
	dd = diff
	ll = log
	br = branch
	st = status
	rv = remote -v
	last = log -1 HEAD

[diff]
	#tool = vimdiff
	tool = opendiff

[difftool]
	prompt = false

